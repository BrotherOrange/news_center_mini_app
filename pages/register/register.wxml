<!--pages/register/register.wxml-->
<form class="form" catchsubmit="formSubmit" catchreset="formReset" wx:if="{{isHide}}">
  <view class="header">输入姓名</view>
  <view class="text">
    <input name="input1" class="textInput" bindblur="getName" />
  </view>
  <view class="header">输入学号</view>
  <view class="text">
    <input name="input2" class="textInput" />  
  </view>
  <view class="selector">
    <view class="choose-department">
      <view class="header">选择部门</view>
      <checkbox-group name="checkbox" class="checkboxes">
        <label><checkbox class="checkbox" value="通讯部"/>通讯部</label>
        <label><checkbox class="checkbox" value="微博部"/>微博部</label>
        <label><checkbox class="checkbox" value="技术部"/>技术部</label>
        <label><checkbox class="checkbox" value="办公室"/>办公室</label>
      </checkbox-group>
    </view>
  </view>
  <view class="header">输入密码</view>
  <view class="text">
    <input name="input3" class="textInput" password="true"/>  
  </view>
  <view class="header">确认密码</view>
  <view class="text">
    <input name="input4" class="textInput" password="true"/>  
  </view>
  <view class="btn-area">
    <button formType="submit" type="primary">提交</button>
    <button formType="reset">重置</button>
  </view>    
</form>

<view class="welcome" wx:if="{{isShow}}">
  <view>{{name}}，你好！</view>
  <view>欢迎来到新闻中心！</view> 
  <text text-decoration="underline" bindtap="navigateToLogin">点击登录</text>
</view>