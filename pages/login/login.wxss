/* pages/login/login.wxss */
.login-btn{
  margin-right: 70rpx;
  margin-top: 120rpx;
}

.rister-btn{
  margin-top: 120rpx;
}

.login-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.hust {
  margin-top: 50rpx;
  margin-bottom: 150rpx;
  font-size: large;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.input {
  width: 85%;
  height: 130rpx;
  margin-bottom: 25rpx;
  font-size: large;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  text-align: center;
  border: 2rpx solid lightgray;
  border-radius: 75rpx;
}

.loginIcon {
  width: 128rpx;
  height: 128rpx;
  margin-top: 50px;
  border-radius: 50%;
}

.forget-register {
  flex-direction: row;
}

.forget {
  font-size: x-small;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: black;
  text-decoration: underline;
}

.register {
  font-size: x-small;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  margin-left: 40rpx;
  color:black;
  text-decoration: underline;
}