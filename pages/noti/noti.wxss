/* pages/noti/noti.wxss */
.form {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  border: 2rpx solid gray;
  border-radius: 35rpx;
  padding: 30rpx;
  font-size: medium;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header {
  font-size: large;
  margin-bottom: 10rpx;
}

.notice-title {
  border: 2rpx solid lightgray ;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
}

.notice-text {
  border: 2rpx solid lightgray ;
  border-radius: 15rpx;
  margin-bottom: 25rpx;
}

.textInput {
  padding: 20rpx;
}

.set-deadline {
  display: flex;
  flex-direction: column;
}

.deadline {
  margin-bottom: 25rpx;
}

.choose-department {
  display: flex;
  flex-direction: column;
  margin-bottom: 25rpx;
}

.checkboxes {
  display: flex;
  flex-direction: column;
}

.checkbox {
  margin-top: 20rpx;
}

.btn-area {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}